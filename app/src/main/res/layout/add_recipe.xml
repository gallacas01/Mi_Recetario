<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipeToRefreshAddRecipe"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context=".ui.db.AddRecipeFragment">

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="30dp"
            android:layout_marginTop="39dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/green_corners"
                android:padding="10dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/anotar"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Registra tu receta"
                    android:textColor="@color/customWhite"
                    android:textSize="30dp"
                    android:layout_marginVertical="6dp"
                    android:gravity="center"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/customVerde3"
                    android:padding="5dp"
                    android:fontFamily="@font/pt_serif"/>

                <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_gravity="center"
                   android:layout_marginVertical="4dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Nombre: "
                       android:textSize="30dp"
                       android:gravity="start"
                       android:textColor="@color/customVerde3"
                       android:fontFamily="@font/pt_serif"/>

                   <EditText
                       android:id="@+id/editTextRecipeName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:ems="10"
                       android:inputType="textPersonName"
                       android:backgroundTint="@color/customVerde3"
                       android:fontFamily="@font/pt_serif"/>

               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grasas (g): "
                        android:textSize="30dp"
                        android:gravity="start"
                        android:textColor="@color/customVerde3"
                        android:fontFamily="@font/pt_serif"/>

                    <EditText
                        android:id="@+id/editTextFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text|number"
                        android:backgroundTint="@color/customVerde3"
                        android:gravity="end"
                        android:fontFamily="@font/pt_serif"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbs (g): "
                        android:textSize="30dp"
                        android:gravity="start"
                        android:textColor="@color/customVerde3"
                        android:fontFamily="@font/pt_serif"/>

                    <EditText
                        android:id="@+id/editTextCarbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text|number"
                        android:backgroundTint="@color/customVerde3"
                        android:gravity="end"
                        android:fontFamily="@font/pt_serif"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/pt_serif">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ProteÃ­nas (g): "
                        android:textSize="30dp"
                        android:gravity="start"
                        android:textColor="@color/customVerde3"
                        android:fontFamily="@font/pt_serif"/>

                    <EditText
                        android:id="@+id/editTextProtein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text|number"
                        android:backgroundTint="@color/customVerde3"
                        android:gravity="end"
                        android:fontFamily="@font/pt_serif"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peso (g): "
                        android:textSize="30dp"
                        android:gravity="start"
                        android:textColor="@color/customVerde3"
                        android:fontFamily="@font/pt_serif"/>

                    <EditText
                        android:id="@+id/editTextWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text|number"
                        android:backgroundTint="@color/customVerde3"
                        android:gravity="end"
                        android:fontFamily="@font/pt_serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kcal: "
                        android:textSize="30dp"
                        android:gravity="start"
                        android:textColor="@color/customVerde3"
                        android:fontFamily="@font/pt_serif"/>

                    <EditText
                        android:id="@+id/editTextKcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text|number"
                        android:backgroundTint="@color/customVerde3"
                        android:gravity="end"
                        android:fontFamily="@font/pt_serif"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imagen (url): "
                        android:textSize="30dp"
                        android:gravity="start"
                        android:textColor="@color/customVerde3"
                        android:fontFamily="@font/pt_serif"/>

                    <EditText
                        android:id="@+id/editTextUrlImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text|number"
                        android:backgroundTint="@color/customVerde3"
                        android:gravity="end"
                        android:fontFamily="@font/pt_serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enlace: "
                        android:textSize="30dp"
                        android:gravity="start"
                        android:textColor="@color/customVerde3"
                        android:fontFamily="@font/pt_serif"/>

                    <EditText
                        android:id="@+id/editTextUrlRecipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text|number"
                        android:backgroundTint="@color/customVerde3"
                        android:gravity="end"
                        android:fontFamily="@font/pt_serif"/>
                </LinearLayout>


                <Button
                    android:id="@+id/btnEnviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="aceptar"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/customVerde3"
                    android:textColor="@color/customWhite"
                    android:fontFamily="@font/pt_serif"
                    android:textSize="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>