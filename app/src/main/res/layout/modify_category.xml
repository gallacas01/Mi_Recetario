<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="7dp"
        android:background="@drawable/green_corners">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:src="@mipmap/taco_icon" />

        <TextView
            android:id="@+id/currentCategories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="29dp"
            android:text="CategorÃ­a que deseas modificar:"
            android:lines="2"
            android:maxLines="3"
            android:textColor="@color/customVerde3"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"/>

        <Spinner
            android:id="@+id/spinnerCategories"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="5dp"
            android:dropDownWidth="match_parent"/>

        <TextView
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nuevo valor:"
            android:textColor="@color/customVerde3"
            android:layout_marginVertical="12dp"
            android:textSize="28dp" />

        <EditText
            android:id="@+id/categoryNewValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/customVerde3"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="21dp"
            android:textColorHint="@color/customVerde3"
            android:textColor="@color/customVerde3"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <Button
            android:id="@+id/btnModifyCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="modificar"
            android:textCursorDrawable="@color/customVerde3"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_rounded"
            android:textColor="@color/customWhite"/>

    </LinearLayout>

</FrameLayout>